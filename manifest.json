  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://metabolic-base.github.io/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+metabolic",
      "url": "/metabolic-base/?module=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/metabolic-base/?import=backup",
      "accept": {
        "application/json": [".json"]
      },
      "icons": [
        {
          "src": "/metabolic-base/icons/file-handler.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "share_target": {
    "action": "/metabolic-base/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "module",
          "accept": ["text/html", "application/json"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "scope_extensions": [
    {
      "origin": "*.metabolic-learning.org"
    }
  ],
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "id": "metabolic-base-pwa",
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
